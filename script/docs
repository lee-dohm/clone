#!/bin/sh

# script/docs: Generate the project's documentation and optionally open it in the primary browser.

set -e
cd "$(dirname "$0")/.."

while test $# -gt 0
do
    case "$1" in
        --open) open="1"
            ;;
    esac
    shift
done

script/bootstrap

echo "==> Generating documentationâ€¦"
mix docs

if [ -n "$open" ]; then
  open doc/index.html
fi
